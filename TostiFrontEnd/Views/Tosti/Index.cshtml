@model IEnumerable<TostiBusinessEntities.Tosti>

@{
    ViewData["Title"] = "Tosti Index";
}

<h2>Tosti's</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brood)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vulling)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calorieen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brood)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vulling)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calorieen)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
